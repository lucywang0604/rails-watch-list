<h1><%= @list.name %></h1>

<h2>Movies in this list:</h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <strong><%= bookmark.movie.title %></strong> - <%= bookmark.comment %>
      <%= link_to "Remove", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
    </li>
  <% end %>
</ul>

<h3>Add a Movie</h3>
<%= render "bookmarks/form", list: @list, bookmark: @bookmark %>

<%= link_to "Back to Lists", lists_path, class: "btn btn-secondary mt-3" %>
